<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="11dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvScreenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:text="somzy_123" />

    <TextView
        android:id="@+id/tvBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvScreenName"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:text="This is my tweet!" />

    <ImageView
        android:id="@+id/contentImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvBody"
        android:layout_alignEnd="@+id/tvBody"
        android:layout_marginStart="0dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="-18dp"
        android:layout_toEndOf="@+id/ivProfileImage"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvBody"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="-3dp"
        android:layout_toEndOf="@+id/tvScreenName" />

    <ImageView
        android:id="@+id/commentIcon"
        android:layout_width="18dp"
        android:layout_height="14dp"
        android:layout_below="@+id/contentImage"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/ivProfileImage"
        app:srcCompat="@drawable/playstore"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/retweetIcon"
        android:layout_width="18dp"
        android:layout_height="14dp"
        android:layout_below="@+id/contentImage"
        android:layout_marginStart="18dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/commentIcon"
        app:srcCompat="@drawable/ic_vector_retweet"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/likeIcon"
        android:layout_width="18dp"
        android:layout_height="14dp"
        android:layout_below="@+id/contentImage"
        android:layout_marginStart="18dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/retweetIcon"
        app:srcCompat="@drawable/ic_vector_heart"
        tools:srcCompat="@tools:sample/avatars" />

</RelativeLayout>